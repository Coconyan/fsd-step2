extends ../layouts/main
block variables
  - var pageTitle = 'Form Elements'

include ../utils/form-elements-mixins

block content
  div.logo-wrapper 
    span.logo
  .form-elements-wrapper
    .column-320
      +textField({title: "text field", name: "text-field-default", placeholder: "Email", test: "DEFAULT"})
      +textField({title: "text field", name: "text-field-focus", placeholder: "This is pretty awesome", class:"text-field_focus", test: "Hover / Focus"})
      +dropDownGuests({title: "dropdown", test: "DEFAULT"})
      +textField({title: "masked text field", name: "text-field-default", placeholder: "ДД.ММ.ГГГГ", test: "DEFAULT"})
      .input-row.input-row-between
        +dateDropdown150({title: "date dropdown", name: "date-dropdown-150", placeholder: "ДД.ММ.ГГГГ"})
        +dateDropdown150({title: "date dropdown", name: "date-dropdown-150", placeholder: "ДД.ММ.ГГГГ"})
      +filterDateDropdown({title: "filter date dropdown", name: "filter-date-dropdown", placeholder: "19 авг - 23 авг"})
      +subscriptionTextField({title: "subscription text field", name: "subscription-text-field", placeholder: "Email"})
      
    .column-320
      .column-260
        h3.head-margin Checkbox buttons
        +checkboxButton({title: "Можно курить", name: "checkbox", id: "checkbox-1"})
        +checkboxButton({title: "Можно с питомцами", name: "checkbox", id: "checkbox-2", checked: "true"})
        +checkboxButton({title: "Можно пригласить гостей (до 10 человек)", name: "checkbox", id: "checkbox-3", checked: "true"})
        h3.head-margin-top.head-margin Radio buttons
        .input-row
          +radioButton({title: "Мужчина", name: "radio", id: "radio-1", checked: "true"})
          +radioButton({title: "Женщина", name: "radio", id: "radio-2"})
        h3.head-margin-top.head-margin Toggle
        +toggleSwitch({title: "Получать спецпредложения", name: "toggle", id: "toggle-1", checked: "true"})
        +toggleSwitch({title: "Получать спецпредложения", name: "toggle", id: "toggle-2"})
        h3.head-margin-top.head-margin Like button
        .input-row.toggle-wrapper
          +likeButton({name: "like", id: "like-1", count: "2"})
          +likeButton({name: "like", id: "like-2", count: "12", checked: "true"})
        h3.head-margin-top.head-margin Rate button
        .input-row
          .rate-wrapper
            span.rate-button.rate-button__checked 
            span.rate-button.rate-button__checked 
            span.rate-button.rate-button__checked 
            span.rate-button.rate-button__checked 
            span.rate-button.
          .rate-wrapper
            span.rate-button.rate-button__checked 
            span.rate-button.rate-button__checked 
            span.rate-button.rate-button__checked 
            span.rate-button.rate-button__checked 
            span.rate-button.rate-button__checked
    .column-320
      h3.head-margin Range slider
      .input-row 
        .noUi-target.noUi-ltr.noUi-horizontal.noUi-txt-dir-ltr#slider-handles
      h3.head-margin-top.head-margin Buttons 
      .input-row
        button.button-gradient.button-gradient-margin Click me
        button.button-gradient.button-gradient-margin.button-gradient__disable Click me
      .input-row
        button.button-gradient.button-gradient-margin.button-gradient-no-fill Click me
        button.button-gradient.button-gradient-margin.button-gradient-no-fill.button-gradient__disable Click me
      .input-row
        button.button-text.button-gradient-margin Click me
        button.button-text.button-text__disable Click me
      .input-row
        button.button-gradient.head-margin.button-gradient-arrow Перейти к оплате
      h3.head-margin Pagination
      .pagination-wrapper
        .pagination-page 1
        .pagination-page 2
        .pagination-page 3
        .pagination-page ... 
        .pagination-page 15
        .pagination-page
      .pagination-wrapper.pagination-wrapper-text
        p 1 – 12 из 100+ вариантов аренды
  .form-elements-wrapper
    .column-320
      .column-260     
        +dropDownRooms({title: "dropdown", test: "DEFAULT"})
        +dropDownRooms({title: "dropdown", test: "EXPANDED", open: "menu-open", last: "false"})
        input(type="checkbox", name="checkbox-list" class="input-checkbox-list", id="checkbox-list1")        
        label(for="checkbox-list1", class="checkbox-list arrow-down") expandable checkbox list        
        input(type="checkbox", name="checkbox-list" class="input-checkbox-list", id="checkbox-list" checked)        
        label(for="checkbox-list", class="checkbox-list arrow-down") expandable checkbox list          
          +checkboxButton({title: "Завтрак", name: "checkbox", id: "checkbox-1"})
          +checkboxButton({title: "Письменный стол", name: "checkbox", id: "checkbox-2", checked: "true"})
          +checkboxButton({title: "Стул для кормления", name: "checkbox", id: "checkbox-3", checked: "true"})
          +checkboxButton({title: "Кроватка", name: "checkbox", id: "checkbox-4", checked: "true"})
          +checkboxButton({title: "Телевизор", name: "checkbox", id: "checkbox-5"})
          +checkboxButton({title: "Шампунь", name: "checkbox", id: "checkbox-6"})
    .column-320
      +dropDownRooms({title: "dropdown", open: "menu-open", last: "true"})
      h3.head-margin Rich checkbox buttons
      +richCheckboxButton({title: "Ширина коридоров в номере не менее 91 см.", subtitle: "Широкий коридор", name: "rich-checkbox", id: "rich-checkbox-1"})
      +richCheckboxButton({title: "На 1 этаже вас встретит специалист  и проводит до номера.", subtitle: "Помощник для инвалидов", name: "rich-checkbox", id: "rich-checkbox-2"})
    .column-320
      +dropDownGuests({title: "dropdown", open: "menu-open", item1: "2", item2: "1", visible: "visible"})
      h3.head-margin Bullet list
      ul.bullet-list
        li.bullet-list-item Нельзя с питомцами
        li.bullet-list-item Без вечеринок и мероприятий
        li.bullet-list-item Время прибытия — после 13:00, а выезд до 12:00
  .form-elements-wrapper.form-elements-wrapper-last-row
    .column-320
      .advantages-wrapper
        .advantages-left-column
          span.advantages-icon.smile-icon
        .advantages-right-column
          span.advantages-subtitle Комфорт
          span.advantages-text Шумопоглощающие стены
      .advantages-wrapper
        .advantages-left-column
          span.advantages-icon.city-icon
        .advantages-right-column
          span.advantages-subtitle Удобство
          span.advantages-text Окно в каждой из спален
    .column-720
      .review-wrapper
        .advantages-left-column
          span.review-icon.avatar-icon
        .advantages-right-column
          span.advantages-subtitle Мурат Сарафанов
          span.advantages-text 5 дней назад
      .review-wrapper
        .advantages-left-column
          +likeButton({name: "like", id: "like-2", count: "12", checked: "true", class: "review-like"})
        .advantages-right-column
          span.advantages-text Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.      