mixin textField(options)
  -
    var textFieldName = 'name'
    var textFieldPleceHolder = 'placeholder'
    var textFieldTitle = 'title'
    var textFieldClass = 'class'
    var test = 'test'
  .input-row
    .input-320-wrapper
      h3
        label(for= options.name)= options.title
        if test
          span(class='ui-kit-right-text')= options.test
      input(type='text', name= options.name, placeholder= options.placeholder class='text-field', class= options.class)

mixin dropDownGuests(options)
  -
    var dropDownFieldTitle = 'title'
    var test = 'test'
    var open = 'open'
    var item1 = 'item1'
    var item2 = 'item2'
    var visible = 'visible'
  .input-row
    .input-320-wrapper
      h3
        label(for= options.name)= options.title
        if test
          span(class='ui-kit-right-text')= options.test  
      .iqdropdown(class= options.open)
        p.iqdropdown-selection(data-seletion-text='Сколько гостей')
        .iqdropdown-menu
          .iqdropdown-menu-option(data-id='item1', data-defaultcount= options.item1)
            div
              p.iqdropdown-item Взрослые
          .iqdropdown-menu-option(data-id='item2', data-defaultcount= options.item2)
            div
              p.iqdropdown-item Дети
          .iqdropdown-menu-option(data-id='item3')
            div
              p.iqdropdown-item Младенцы
          .iqdropdown-menu-last-row
            p.iqdropdown-menu-clear-btn(class= options.visible) Очистить
            p.iqdropdown-menu-submit-btn Применить

mixin dropDownRooms(options)
  -
    var dropDownFieldTitle = 'title'
    var test = 'test'
    var open = 'open'
    var last = 'false'
  .input-row
    .input-320-wrapper
      h3
        label(for= options.name)= options.title
        if test
          span(class='ui-kit-right-text')= options.test      
      .iqdropdown(class= options.open)
        p.iqdropdown-selection(data-seletion-text='2 спальни, 2 кровати...', data-text-plural='2 спальни, 2 кровати...')
        .iqdropdown-menu
          .iqdropdown-menu-option(data-id='item11', data-defaultcount="2")
            div
              p.iqdropdown-item Спальни
          .iqdropdown-menu-option(data-id='item22', data-defaultcount="2")
            div
              p.iqdropdown-item Кровати
          .iqdropdown-menu-option(data-id='item33')
            div
              p.iqdropdown-item Ванные комнаты
          if options.last == "true"
            .iqdropdown-menu-last-row
              p.iqdropdown-menu-clear-btn Очистить
              p.iqdropdown-menu-submit-btn Применить


